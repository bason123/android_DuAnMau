<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_header_home"
    tools:context=".LogInActivity">

    <ImageView
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:src="@drawable/zero51"
        android:layout_marginTop="41dp"
        android:layout_gravity="center"/>
    <ImageView
        android:layout_width="47dp"
        android:layout_height="29dp"
        android:src="@drawable/mtt"
        android:layout_marginTop="-135dp"
        android:layout_gravity="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng ký"
        android:layout_gravity="center"
        android:layout_marginTop="110dp"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:background="@drawable/edittext_login"
        android:layout_marginTop="15dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="25dp"
        android:hint="Số điện thoại"
        android:textColor="#000000"
        android:paddingStart="25dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">
        <EditText
            android:id="@+id/nameCustomer"
            android:layout_width="210dp"
            android:layout_height="59dp"
            android:background="@drawable/edittext_login"
            android:layout_marginStart="40dp"
            android:hint="Họ Và Tên"
            android:textColor="#000000"
            android:paddingStart="25dp"/>
        <EditText
            android:id="@+id/gender"
            android:layout_width="110dp"
            android:layout_height="59dp"
            android:background="@drawable/edittext_login"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="40dp"
            android:hint="Giới tính"
            android:textColor="#000000"
            android:paddingStart="25dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">
        <EditText
            android:id="@+id/addressCustomer"
            android:layout_width="230dp"
            android:layout_height="59dp"
            android:background="@drawable/edittext_login"
            android:layout_marginStart="40dp"
            android:hint="Địa Chỉ"
            android:textColor="#000000"
            android:paddingStart="25dp"/>
        <EditText
            android:id="@+id/age"
            android:layout_width="90dp"
            android:layout_height="59dp"
            android:background="@drawable/edittext_login"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="40dp"
            android:hint="Tuổi"
            android:textColor="#000000"
            android:paddingStart="25dp"/>
    </LinearLayout>
    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:background="@drawable/edittext_login"
        android:layout_marginTop="15dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="25dp"
        android:hint="Mật khẩu"
        android:inputType="textPassword"
        android:textColor="#000000"
        android:paddingStart="25dp"/>
    <EditText
        android:id="@+id/passwordRetype"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:background="@drawable/edittext_login"
        android:layout_marginTop="15dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="25dp"
        android:hint="Nhập Lại Mật khẩu"
        android:inputType="textPassword"
        android:textColor="#000000"
        android:paddingStart="25dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnRegister"
        android:layout_width="wrap_content"
        android:layout_height="57dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_login"
        android:paddingTop="5dp"
        android:paddingStart="32dp"
        android:paddingBottom="5dp"
        android:paddingEnd="32dp"
        android:text="Đăng Ký"
        android:textColor="#DEEDEC"
        android:textSize="21sp" />
</LinearLayout>