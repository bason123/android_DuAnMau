<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginEnd="20dp">

                <TextView
                    android:id="@+id/nameFood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bún chả giò + Trà tắc"
                    android:textColor="#FF000000"
                    android:textFontWeight="500"
                    android:textSize="16sp"
                    android:layout_marginStart="28dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="end">
                    <TextView
                        android:id="@+id/priceFood"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="79,000"
                        android:textAlignment="textEnd"
                        android:textSize="14sp"
                        android:textFontWeight="500"
                        android:textColor="@color/textColor"/>
                    <!--            <TextView-->
                    <!--                android:layout_width="wrap_content"-->
                    <!--                android:layout_height="wrap_content"-->
                    <!--                android:text="đ"/>-->

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginBottom="17.53dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/giamSoLuong"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/border_tanggiam"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="-" />

                <TextView
                    android:id="@+id/soLuong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:text="1"
                    android:textSize="18dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/tangSoLuong"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/border_tanggiam"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="+"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:layout_gravity="center"
                    android:layout_marginEnd="20dp">
                    <TextView
                        android:id="@+id/tonggia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="79,000"
                        android:textSize="14sp"
                        android:textFontWeight="500"
                        android:textColor="@color/textColor"/>
                    <!--            <TextView-->
                    <!--                android:layout_width="wrap_content"-->
                    <!--                android:layout_height="wrap_content"-->
                    <!--                android:text="đ"/>-->
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/remoreProduct"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:background="@drawable/button_cart_remove"
            android:text="xóa"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="15dp"/>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#7B7979"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        />

</LinearLayout>