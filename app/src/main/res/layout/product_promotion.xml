<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:padding="10dp">
        <ImageView
            android:id="@+id/imgPromotion"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ministop"
            ></ImageView>

<!--        <ImageView-->
<!--            android:id="@+id/imgchu"-->
<!--            android:layout_width="80dp"-->
<!--            android:layout_height="20dp"-->
<!--            android:layout_marginTop="-26dp"-->
<!--            android:layout_marginStart="10dp"-->
<!--            android:src="@drawable/quangon" />-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="21dp">
            <TextView
                android:id="@+id/promotion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#FF1818"
                android:textSize="8sp"
                android:text="Khuyến mãi"/>
        <TextView
            android:id="@+id/nameStore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textStyle="bold"
            android:textColor="#282828"
            android:textSize="18sp"
            android:text="MINISTOP"/>
            <TextView
                android:id="@+id/mitune"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:layout_marginTop="5dp"
                android:text="25 Phút - 4,4 km"/>
            <TextView
                android:id="@+id/namePromotion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                android:text="Convenience Store - Gà rán - Burger"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
                <TextView
                    android:id="@+id/ratePromotion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ưu đãi đến 25% "
                    android:textSize="8sp"
                    android:gravity="center"
                    android:background="#F1C7C7"/>
                <TextView
                    android:id="@+id/mathanggiam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mặt hàng giảm giá "
                    android:textSize="8sp"
                    android:gravity="center"
                    android:layout_marginStart="15dp"
                    android:background="#F1C7C7"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#7B7979"/>


</LinearLayout>